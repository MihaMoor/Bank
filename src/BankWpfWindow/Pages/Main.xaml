<Page x:Class="BankWpfWindow.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankWpfWindow"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">
    <Grid>
        <Button
            x:Name="Settings"
            Content="Настройки"
            HorizontalAlignment="Left"
            Margin="676,10,0,0"
            VerticalAlignment="Top"
            Width="102"
            Click="Settings_Click"/>
        <Label
            Content="Остаток:"
            HorizontalAlignment="Left"
            Margin="0,80,0,0"
            VerticalAlignment="Top"
            Width="55"
            Height="25"
            BorderBrush="Black"/>
        <Label
            x:Name="Balance"
            Content=""
            HorizontalAlignment="Left"
            Margin="55,80,0,0"
            VerticalAlignment="Top"
            Height="30"
            Width="70"
            BorderBrush="Black"
            BorderThickness="1,1,1,1"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"/>
        <TextBox
            x:Name="Coast"
            HorizontalAlignment="Left"
            Margin="270,80,0,0"
            TextWrapping="Wrap"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            VerticalAlignment="Top"
            Width="70"
            Height="30" KeyDown="EnterKeyAddCoast"/>
        <Button
            x:Name="AddCoast"
            Content="Добавить расход"
            HorizontalAlignment="Left"
            Margin="350,80,0,0"
            VerticalAlignment="Top"
            Height="30"
            Width="104"
            Click="AddCost_Click"/>
        <Button
            x:Name="CleanCoast"
            Content="Очитстить"
            HorizontalAlignment="Left"
            Margin="464,80,0,0"
            VerticalAlignment="Top"
            Width="92"
            Height="30"
            Click="CleanCoast_Click"/>
        <Button
            x:Name="Logout"
            Content="LogOut"
            HorizontalAlignment="Left"
            Margin="676,380,0,0"
            VerticalAlignment="Top"
            Width="102"
            Click="Logout_Click"/>

        <DataGrid
            x:Name="BalanceHistoryElement"
            Height="200"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Margin="0,155,0,0"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            AutoGenerateColumns="True"
            CanUserResizeColumns="True"
            ColumnHeaderHeight="30"
            RowHeight="25"
            CanUserAddRows="False"/>
    </Grid>
</Page>
